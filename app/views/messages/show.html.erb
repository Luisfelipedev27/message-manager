<div class="px-4 sm:px-6 lg:px-8">
  <div class="mb-4">
    <%= link_to messages_path, class: "text-sm text-gray-500 hover:text-gray-700" do %>
      â† Back to messages
    <% end %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 flex justify-between items-start">
      <div>
        <h3 class="text-2xl leading-6 font-bold text-gray-900">
          <%= @message.subject %>
        </h3>
        <p class="mt-1 max-w-2xl text-sm text-gray-500">
          Created <%= time_ago_in_words(@message.created_at) %> ago
        </p>
      </div>
      <div class="flex space-x-3">
        <%= link_to "Edit", edit_message_path(@message), class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
        <%= button_to "Delete", @message, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this message?" }, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700" %>
      </div>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:px-6">
      <dl class="grid grid-cols-1 gap-x-4 gap-y-8 sm:grid-cols-2">
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">Message Body</dt>
          <dd class="mt-2 text-sm text-gray-900 whitespace-pre-wrap"><%= @message.body %></dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Created At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @message.created_at.strftime('%B %d, %Y at %H:%M') %></dd>
        </div>
        <div class="sm:col-span-1">
          <dt class="text-sm font-medium text-gray-500">Updated At</dt>
          <dd class="mt-1 text-sm text-gray-900"><%= @message.updated_at.strftime('%B %d, %Y at %H:%M') %></dd>
        </div>
      </dl>
    </div>
  </div>
</div>
