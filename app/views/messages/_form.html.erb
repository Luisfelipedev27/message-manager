<%= form_with(model: message, class: "space-y-6") do |form| %>
  <% if message.errors.any? %>
    <div class="bg-red-50 border-l-4 border-red-400 p-4 rounded">
      <h3 class="text-sm font-medium text-red-800">
        <%= pluralize(message.errors.count, "error") %> prohibited this message from being saved:
      </h3>
      <ul class="mt-2 text-sm text-red-700 list-disc list-inside">
        <% message.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :subject, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :subject, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border" %>
  </div>

  <div>
    <%= form.label :body, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :body, rows: 8, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-4 py-2 border" %>
  </div>

  <div class="flex items-center justify-end space-x-3">
    <%= link_to "Cancel", messages_path, class: "px-4 py-2 text-sm font-medium text-gray-700 hover:text-gray-900" %>
    <%= form.submit class: "inline-flex justify-center rounded-md border border-transparent bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 cursor-pointer" %>
  </div>
<% end %>
